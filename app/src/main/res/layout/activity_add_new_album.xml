<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="album"
            type="com.example.recordshop.model.Album" />
        <variable
            name="clickHandler"
            type="com.example.recordshop.ui.addAlbum.AddAlbumClickHandlers" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addAlbum.AddNewAlbumActivity"
        app:layout_constraintTop_toTopOf="@+id/editArtist"
        app:layout_constraintBottom_toBottomOf="@+id/editArtist">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/editText"
            android:text="Add an album"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginBottom="40dp"
            android:background="@android:color/holo_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{album.name}"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:id="@+id/editTitle"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="3dp"
            android:hint="Enter title"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:minHeight="60dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{album.releaseYear}"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:id="@+id/editReleaseYear"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="3dp"
            android:hint="Enter release year"
            app:layout_constraintTop_toBottomOf="@+id/editTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:minHeight="60dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{album.genre}"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:id="@+id/editGenre"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="3dp"
            android:hint="Enter genre"
            app:layout_constraintTop_toBottomOf="@+id/editReleaseYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:minHeight="60dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{album.artist.name}"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:id="@+id/editArtist"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="3dp"
            android:hint="Enter Artist name"
            app:layout_constraintTop_toBottomOf="@+id/editGenre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:minHeight="60dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{album.coverUrl}"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/black"
            android:id="@+id/editCoverUrl"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="3dp"
            android:hint="Enter cover Url"
            app:layout_constraintTop_toBottomOf="@+id/editArtist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:minHeight="60dp"/>

        <Button
            android:onClick="@{clickHandler.onSubmitBtnClicked}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_marginTop="48dp"
            android:text="@string/add_album"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCoverUrl" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:onClick="@{clickHandler.onBackBtnClicked}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floatingActionButton"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@android:drawable/ic_menu_revert"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>